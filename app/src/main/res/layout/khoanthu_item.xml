<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:id="@+id/cvKhoanThu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#cdffeb">


        <TextView
            android:id="@+id/txtTenKhoanThu"
            android:text="Tên loai"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtTienKhoanThu"
            android:text="Tiền"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtNgayThu"
            android:text="Ngày thu"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_marginLeft="250dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txtGhichuKhoanThu"
            android:text="Ghi chú"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <ImageView
            android:id="@+id/iveditKhoanThu"
            android:src="@drawable/ic_edit"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="-90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivdeleteKhoanThu"
            android:src="@drawable/ic_delete"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="-30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>